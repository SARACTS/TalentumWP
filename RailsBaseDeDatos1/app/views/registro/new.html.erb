<h1>Lista de registros</h1>

<table>
	<tr>
		<th>Titulo</th>
		<th>Comentarios</th>
		<th>Borrar</th>

	</tr>
	
	
	<tbody>
<% 
# registros = Registro.all
for registro in @registros%>

	<tr>
		<td><%=registro.titulo%></td>
		<td><%=registro.comentarios%></td>
		<td><a href="/registro/delete?id=<%=registro.id%>">Borrar</a></td>
		<td><a href="/registro/update_vista?id=<%=registro.id%>">Modificar</a></td>


	</tr>
	
<% end %>
	</tbody>
</table>


	<%= form_tag({controller:"registro",action:"create"},method:"get") do%>
	<%= label_tag(:tiutlo, "Titulo:")%>
	<%= text_field_tag(:titulo)%><br/>
	<%= label_tag(:comentarios, "Comentarios:")%>
	<%= text_field_tag(:comentarios)%><br/>
	
	<%= submit_tag("Crear")%>
	
	
<%end%>


<%if @registro  != nil  && @registro.errors.any? %>
<ul>
	<%@registro.errors.full_messages.each do |mensaje_error|%>
		<li><%=mensaje_error%></li>
	<%end%> 
</ul>
<%end%>

<a href="/registro/busquedas">Busquedas</a>
